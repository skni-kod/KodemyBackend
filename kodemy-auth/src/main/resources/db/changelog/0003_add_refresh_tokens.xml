<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0003-1" author="KartVen">
        <createTable tableName="refresh_tokens">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_refresh_tokens"/>
            </column>
            <column name="created_by" type="BIGINT"/>
            <column name="created_date" type="DATETIME"/>
            <column name="modified_by" type="BIGINT"/>
            <column name="modified_date" type="DATETIME"/>
            <column name="token" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="bearer_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="expired_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_refresh_tokens_user" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>