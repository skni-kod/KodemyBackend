<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="KartVen">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="photo" type="VARCHAR(255)"/>
            <column name="is_expired" type="BOOLEAN"/>
            <column name="is_locked" type="BOOLEAN"/>
            <column name="is_credentials_expired" type="BOOLEAN"/>
            <column name="is_enabled" type="BOOLEAN"/>
            <column name="created_date" type="DATETIME"/>
            <column name="last_modified_date" type="DATETIME"/>
            <column name="last_login_date" type="DATETIME"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="KartVen">
        <createTable tableName="role">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="KartVen">
        <createTable tableName="users_role">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="users_role_role_fk" references="role(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="users_role_users_fk" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="KartVen">
        <createTable tableName="section">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_section"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="KartVen">
        <createTable tableName="category">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_category"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="section_id" type="BIGINT">
                <constraints foreignKeyName="category_section_fk" references="section(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="KartVen">
        <createTable tableName="type">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_type"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="7" author="KartVen">
        <createTable tableName="material">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_material"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="created_date" type="DATETIME"/>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="material_category_fk" references="category(id)"/>
            </column>
            <column name="type_id" type="INT">
                <constraints nullable="false" foreignKeyName="material_type_fk" references="type(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="material_users_fk" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="8" author="KartVen">
        <createTable tableName="technology">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_technology"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="9" author="KartVen">
        <createTable tableName="technology_material">
            <column name="material_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="technology_material_material_fk" references="material(id)"/>
            </column>
            <column name="technology_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="technology_material_technology_fk" references="technology(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="10" author="KartVen">
        <createTable tableName="grade">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_grade"/>
            </column>
            <column name="grade" type="DOUBLE PRECISION"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="grade_users_fk" references="users(id)"/>
            </column>
            <column name="material_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="grade_material_fk" references="material(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="11" author="KartVen">
        <createTable tableName="users_provider">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users_provider"/>
            </column>
            <column name="principal_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="provider_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="photo" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="users_users_provider_fk" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>